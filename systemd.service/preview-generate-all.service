[Unit]
Description=Preview Generator
After=nextcloud.service files-scan-all.service
PartOf=nextcloud.service

[Service]
Type=oneshot
ExecStart=/usr/bin/docker-compose -f %h/nextcloud/docker-compose.yml exec -T --user www-data app php occ preview:generate-all
#Restart=on-failure
RemainAfterExit=yes

[Install]
WantedBy=nextcloud.service
