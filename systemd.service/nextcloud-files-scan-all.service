[Unit]
Description=Scan all files
After=nextcloud.service
Before=preview-generate-all.service
PartOf=nextcloud.service

[Service]
WorkingDirectory=%h/nextcloud

Type=oneshot
ExecStart=/usr/bin/docker-compose exec -T --user www-data app php occ files:scan --all --verbose
#Restart=on-failure
RemainAfterExit=yes

[Install]
WantedBy=nextcloud.service
