[Unit]
Description=Nextcloud Cron Job
After=nextcloud.service files-scan-all.service
PartOf=nextcloud.service

[Service]
ExecStart=/usr/bin/docker-compose -f %h/nextcloud/docker-compose.yml exec -T --user www-data app php cron.php
Restart=always
RestartSec=5min

[Install]
WantedBy=nextcloud.service
