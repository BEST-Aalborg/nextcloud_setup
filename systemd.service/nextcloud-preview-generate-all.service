[Unit]
Description=Nextcloud - Preview Generator (all)
After=nextcloud.service files-scan-all.service
PartOf=nextcloud.service

[Service]
Type=simple
ExecStart=/usr/bin/docker-compose exec -T --user www-data app php occ preview:generate-all

Restart=on-failure
RestartSec=6min

RemainAfterExit=yes

[Install]
WantedBy=nextcloud.service
